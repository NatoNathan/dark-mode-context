{
  "name": "dark-mode-context",
  "version": "1.0.0-alpha.3",
  "description": "A simple context provider for dark mode",
  "keywords": [
    "dark",
    "mode",
    "context",
    "provider",
    "react",
    "tailwindcss",
    "tailwindcss-dark-mode",
    "react-tailwindcss",
    "react-context",
    "hooks",
    "context-provider",
    "context-provider-hooks"
  ],
  "homepage": "https://natonathan.github.io/dark-mode-context/",
  "author": "NatoNathan",
  "license": "MIT",
  "repository": "NatoNathan/dark-mode-context",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "lint": "eslint src/**/*.{ts,tsx}",
    "build": "microbundle-crl --external='react,react-dom' --no-compress --format modern,cjs",
    "start": "microbundle-crl --external='react,react-dom' watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint src/**/*.{ts,tsx}",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom --coverage",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@headlessui/react": "^1.4.3",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.0",
    "@testing-library/user-event": "^14.2.0",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.0.3",
    "@types/react": "^18.0.10",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^5.0.0",
    "gh-pages": "^4.0.0",
    "jest-localstorage-mock": "^2.4.18",
    "jest-matchmedia-mock": "^1.1.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-scripts": "^5.0.1",
    "typescript": "^4.7.2"
  },
  "files": [
    "dist"
  ]
}
